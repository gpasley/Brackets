<div class="">
  There are <%= @sheets.size %> entries. Contact gpasley@gmail.com if you have any questions about your score
  <table id="leaders">
	<th>Name</th>
	<th>Bracket</th>
	<th>Final Four Teams</th>
	<th>Champion Pick</th>
	<th>Rd 1</th>
	<th>Rd 2</th>
	<th>Sweet 16</th>
	<th>Elite 8</th>
	<th>Final 4</th>
	<th>Final</th>
	<th>Total</th>
	<% @sheets.each_with_index do |sheet, i| %>
	<% row_class = i%2 == 0 ? "even" : "odd" %>
	<tr class="<%= row_class %>">
	  <td><%= sheet.user.fullname %></td>
	  <td><%= link_to sheet.name, sheet %></td>
	  <td>	
		<span class="<%= 'loss' if team_loss(sheet.round4g1) == true %>">
	      <%= sheet.round4g1 %>,
	    </span> 
	    <span class="<%= 'loss' if team_loss(sheet.round4g2) == true %>">
	      &nbsp;<%= sheet.round4g2 %>,
	    </span>
	    <span class="<%= 'loss' if team_loss(sheet.round4g3) == true %>">
	      &nbsp;<%= sheet.round4g3 %>, 
	    </span>
		<span class="<%= 'loss' if team_loss(sheet.round4g4) == true %>">
	      &nbsp;<%= sheet.round4g4 %>
	    </span>
	  </td>
	  <td>
	   	<span class="<%= 'loss' if team_loss(sheet.round6) == true %>">
	     <%= sheet.round6 %>
	    </span>

	  </td>
	  <td><%= sheet.round1pts %></td>
	  <td><%= sheet.round2pts %></td>
	  <td><%= sheet.round3pts %></td>
	  <td><%= sheet.round4pts %></td>
	  <td><%= sheet.round5pts %></td>
	  <td><%= sheet.round6pts %></td>
	  <td><%= sheet.total_points %></td>
	</tr>
	<% end %>
  </table>
</div>