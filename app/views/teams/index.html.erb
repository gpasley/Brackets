<h1>Listing teams</h1>
<br>
<%= link_to 'New Team', new_team_path %>
<br><br>
<table width="50%" class="table table-striped table-hover">
  <tr>
    <th align="left">Name</th>
    <th align="left">Display name</th>
    <th align="left">Game</th>
    <th align="left">Loss</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @teams.each do |team| %>
  <tr>
    <td><%= team.name %></td>
    <td><%= team.display_name %></td>
    <td><%= team.game %></td>
    <td><% if team.loss_yn == true %>
	  Y
	  <% end %>
	</td>
    <td><%= link_to 'Show', team %></td>
    <td><%= link_to 'Edit', edit_team_path(team) %></td>
    <td><%= link_to 'Destroy', team, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

